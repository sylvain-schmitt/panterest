{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row py-5">
    <div class="col-md-6 mx-auto">
        <form method="post">
            <h1 class="text-center mt-5 pb-3">Please sign in</h1>
            <p class="text-muted text-center pb-5">Time to add some new pins!</p>
            {% if error %}
                <div class="alert alert-error mb-3 rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="mb-3">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            </div>
            <div class="mb-3">
                <label for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <div class="d-flex pb-3 justify-content-between">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
                    <label class="form-check-label" for="remember_me">
                        Remember me
                    </label>
                </div>
                <a href="#">Forgot password?</a>
            </div>
            <div class="d-grid gap-2">
                <button class="btn btn-primary btn-block" type="submit">
                    Sign in
                </button>
            </div>
            <p class="text-muted text-center mt-3">Not registered yet?<a class="text-decoration-none" href="#"> Create an account</a></p>
        </form>
    </div>
</div>
{% endblock %}
