{% extends 'base.html.twig' %}

{% block title 'Pinterest clone' %}

{% block body %}
    <h1>{{ pluralize(pins | length, 'Pin') }}</h1>
        {% for pin in pins %}
            <article>
                <h2> <a href="{{ path('app_pins_show', {slug:pin.slug}) }}"> {{ pin.title }} </a></h2>
                <p>{{ pin.description |u.truncate(60, '...', false) }}</p>
            </article>
        {% endfor %}
{% endblock %}
