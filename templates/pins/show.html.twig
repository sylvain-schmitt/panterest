{% extends 'base.html.twig' %}

{% block title pin.title %}

{% block body %}
            <article>
                <h2>  {{ pin.title }} </h2>
                <p>{{ pin.description }}</p>
                <p>Publier {{ pin.createdAt | ago }}</p>
            </article>
            <a href="{{ path('app_pins_edit', {id: pin.id}) }}">Edit</a> |
            <a href="#" onclick="event.preventDefault(); confirm('Ãªtes vous sur de vouloir supprimer {{pin.title}} ?') && document.getElementById('js-pin-delete-form').submit();">Delete</a> |
